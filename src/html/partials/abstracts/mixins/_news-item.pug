mixin newsItem(heading, date, img, alt, text)
  +b.ARTICLE.news-item(itemscope, itemtype="http://schema.org/Article")
    .row              
      .col-xs-12.col-lg-3.offset-lg-1
        +e.img
          img(src= "img/news/" + img alt= alt title= alt itemprop="image")
      .col-xs-12.col-lg-7
        +e.wrapper
          +e.H2.heading
            a(href="single-news.html", itemprop="headline") #{heading}
          +e.text(itemprop="articleBody")
            p #{text} 
          +b.date(itemprop="datePublished") #{date} 

